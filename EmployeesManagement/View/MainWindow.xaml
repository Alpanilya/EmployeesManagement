<Window x:Class="EmployeesManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeesManagement"
        xmlns:fa ="http://schemas.fontawesome.com/icons/"
        mc:Ignorable="d"
        Title="{Binding Title}"
        DataContext="{Binding MainWindowModel, Source= {StaticResource Locator}}"
        Background="#1A1B1C"
        Height="450" Width="800">
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <UniformGrid DockPanel.Dock="Bottom" Rows="1">
                <Button Style="{StaticResource MenuButtonStyle}" Command="{Binding CreateDepartamentCommand}">
                    <Button.Content>
                        <fa:FontAwesome Icon="Solid_Plus" Foreground="LimeGreen"/>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <fa:FontAwesome Icon="Regular_TrashAlt" Foreground="Red"/>
                    </Button.Content>
                </Button>
            </UniformGrid>
            <ListBox Background="Transparent" BorderThickness="0">
            </ListBox>
        </DockPanel>
        <DockPanel Grid.Column="1">
            <UniformGrid DockPanel.Dock="Bottom" Rows="1">
                <Button Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <fa:FontAwesome Icon="Solid_UserPlus" Foreground="LimeGreen"/>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <fa:FontAwesome Icon="Solid_UserEdit" Foreground="LightBlue"/>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}">
                    <Button.Content>
                        <fa:FontAwesome Icon="Regular_TrashAlt" Foreground="Red"/>
                    </Button.Content>
                </Button>
            </UniformGrid>
            <ListBox Background="Transparent" BorderThickness="0"/>
        </DockPanel>
        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource TextBlockStyle}" Text="Фамилия:"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource TextBlockStyle}" Text="Имя:"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource TextBlockStyle}" Text="Возраст:"/>
            <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource TextBlockStyle}" Text="Должность:"/>

            <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource TextBlockStyle}" Text="Фамилия:"/>
            <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource TextBlockStyle}" Text="Имя:"/>
            <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource TextBlockStyle}" Text="Возраст:"/>
            <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource TextBlockStyle}" Text="Должность:"/>
        </Grid>

        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="2"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Right" Width="2"/>
    </Grid>
</Window>
